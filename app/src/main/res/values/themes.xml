<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.APEXApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.APEXApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.APEXApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.APEXApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/relative_layout_radius</item>
    </style>



    <style name="ActivityTitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/semi_bold</item>
    </style>

    <style name="AppTheme.Text.XLarge" parent="Theme.APEXApp">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/extra_bold</item>
    </style>

    <style name="AppTheme.Text.Large" parent="Theme.APEXApp">
        <item name="android:textSize">21sp</item>
        <item name="fontFamily">@font/semi_bold</item>
    </style>

    <style name="AppTheme.Text.Medium" parent="Theme.APEXApp">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="AppTheme.Text.Medium_semi_bold" parent="Theme.APEXApp">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/semi_bold</item>
    </style>
    <style name="AppTheme.Text.Small" parent="Theme.APEXApp">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="AppTheme.Text.Small_bold" parent="Theme.APEXApp">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/bold</item>
    </style>



    <style name="AppTheme.Text.XSmall" parent="Theme.APEXApp">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/regular</item>
    </style>


    <style name="AppTheme.DrawerText" parent="Theme.APEXApp">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/semi_bold</item>
    </style>
    <style name="ProgressBar" parent="Theme.APEXApp">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>



    <style name="Theme.APEXApp.HintTextAppearance">
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">15sp</item>
    </style>




